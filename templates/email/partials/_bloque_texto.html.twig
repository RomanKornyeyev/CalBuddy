{% if texto is defined and texto|trim %}
    <table class="paragraph_block block-2" width="100%" border="0" cellpadding="0" cellspacing="0" role="presentation" style="mso-table-lspace: 0pt; mso-table-rspace: 0pt; word-break: break-word;">
        <tr>
            <td class="pad" style="padding-bottom:15px;padding-left:50px;padding-right:50px;padding-top:15px;">
                <div style="color:#000;direction:ltr;font-family:'Ubuntu', Tahoma, Verdana, Segoe, sans-serif;font-size:16px;font-weight:400;letter-spacing:0px;line-height:1.2;text-align:left;mso-line-height-alt:19px;">
                    <p style="margin: 0;">{{ texto|default('')|raw }}</p>
                </div>
            </td>
        </tr>
    </table>
{% endif %}